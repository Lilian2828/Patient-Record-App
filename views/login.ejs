<!doctype html>
<html>
  <head>
    <title>Login for <%=appName%></title>
    <link rel="stylesheet"  type="text/css" href="/main.css" />
  </head>
  <body>
    <h1><%=appName%></h1>
    <div class="navbar">
      <a href="list">List patients</a>
      <a href="search">Search for patient</a>
      <a href="addpatient">Add a new patient</a>
      <a href="register">Register new user</a>
      <a href="login" class="active">Login with us</a>
      <a href="about">About <%=appName%></a>
      <a href="/logout">Logout</a>
    </div>
    <h2>Login for <%=appName%></h2>
    <div class="container">
      <h1>User Login</h1>
      <form method="POST" action="/loggedin" class="login-form">
          <div class="form-group">
              <label for="user">Username:</label>
              <input id="user" type="text" name="username" required>
          </div>
          <div class="form-group">
              <label for="password">Password:</label>
              <input id="password" type="password" name="password" required>
          </div>
          <div class="form-group">
              <button type="submit">Login</button>
          </div>
      </form>
  </div>
  </body>
</html>