<!doctype html>
<html>
  <head>
    <title>Register for <%=appName%></title>
    <link rel="stylesheet"  type="text/css" href="/main.css" />
  </head>
  <body>
    <h1><%=appName%></h1>
    <div class="navbar">
      <a href="list" title="View the list of patients">List patients</a>
      <a href="search" title="Search for a patient">Search for patient</a>
      <a href="addpatient" title="Add a new patient">Add a new patient</a>
      <a href="register" title="Register as a new user" class="active">Register new user</a>
      <a href="login" title="Login to your account">Login with us</a>
      <a href="about" title="Learn more about <%=appName%>">About <%=appName%></a>
      <a href="/logout" title="Logout from your account">Logout</a>
    </div>
    
    <script>
      // Get all navigation links
      const navLinks = document.querySelectorAll('.navbar a');
      
      // Add event listeners to each link
      navLinks.forEach(link => {
        // Show message when hovering over the link
        link.addEventListener('mouseover', function() {
          // Get the message from the link's title attribute
          const message = this.getAttribute('title');
          // Display the message in a tooltip or other UI element
          // For example, you can create a tooltip element and append it to the body
          const tooltip = document.createElement('div');
          tooltip.classList.add('tooltip');
          tooltip.textContent = message;
          // Position the tooltip relative to the link
          const linkRect = this.getBoundingClientRect();
          tooltip.style.top = `${linkRect.top + linkRect.height}px`;
          tooltip.style.left = `${linkRect.left}px`;
          // Append the tooltip to the body
          document.body.appendChild(tooltip);
      
          // Remove the tooltip when mouse leaves the link
          link.addEventListener('mouseleave', function() {
            tooltip.remove();
          });
        });
      });
      </script>

    <!-- Register form of new user -->
    <h1>Register for <%=appName%></h1>
    <div class="container">
      <h1>Doctor Registration</h1>
      <form method="POST" action="/registered" class="registration-form">
        <div class="form-group">
          <label for="First">First:</label>
          <p>First name: <input id="first" type="text" name="first_name" /></p>
        </div>

        <div class="form-group">
          <label for="Last">Last:</label>
          <p>Last name: <input id="last" type="text" name="last_name" /></p>
        </div>

        <div class="form-group">
          <label for="email">Email:</label>
          <p>Email: <input id="email" type="email" name="email" /></p>
        </div>

        <div class="form-group">
          <label for="username">Last:</label>
          <p>Username: <input id="user" type="text" name="username" /></p>
        </div>
        <div class="form-group">
          <label for="password">Last:</label>
          <p>Password: <input id="password" type="password" name="password" /></p>
        </div>
        <input type="submit" value="Register" />
      </form>
    </div>
  </body>
</html>